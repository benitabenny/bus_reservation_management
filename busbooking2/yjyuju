$stmt = $conn->prepare("INSERT INTO booked (schedule_id, ref_no, name, qty, status) VALUES (?, ?, ?, ?, 0)");
    $stmt->bind_param("issi", $schedule_id, $ref_no, $name, $qty);
    $status = 0; // Default status: Unpaid
    
    if ($stmt->execute()) {
        echo "<h2>Booking Successful!</h2>";
        echo "<p>Your Reference Number: <strong>" . $ref_no . "</strong></p>";
        echo "<p>Please save this reference number for future inquiries.</p>";
    } else {
        echo "<h2>Booking Failed!</h2>";
        echo "<p>Error: " . $stmt->error . "</p>";
    }
    
    $stmt->close();
    $conn->close();

















    <?php
// Database connection details
$servername = "localhost"; 
$username = "root"; 
$password = ""; 
$dbname = "Bus_Bookingg";

// Create connection
$conn = new mysqli($servername, $username, $password, $dbname);

// Check connection
if ($conn->connect_error) {
    die("Connection failed: " . $conn->connect_error);
}

// Process login form submission
if ($_SERVER["REQUEST_METHOD"] == "POST") {
    $uname = $_POST["username"];
    $pname = $_POST["password"];

    // SQL query to check username and password
    $sql = "SELECT * FROM users WHERE  username = '$uname' AND password = '$pname'";
    $result = $conn->query($sql);

    if ($result->num_rows > 0) {
        // Login successful, redirect to homestock.html
        header("Location: admin_dashboard.php");
        exit(); // Important: Stop further execution
    } else {
        // Login failed, display error message
        $error = "Invalid username or password";
    }
}

$conn->close(); // Close the database connection
?>
