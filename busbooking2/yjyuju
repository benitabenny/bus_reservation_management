<?php
session_start();
include('login.php'); // Ensure you include the database connection file

// Check if user is logged in
if (!isset($_SESSION['username'])) {
    header("Location: login.php");
    exit();
}

// Handle bus search
if ($_SERVER["REQUEST_METHOD"] == "POST") {
    $from = $_POST['from'];
    $to = $_POST['to'];
    $journey_date = $_POST['date'];

    // Database search logic
    try {
        $stmt = $conn->prepare("SELECT * FROM buses WHERE departure_city = ? AND arrival_city = ? AND journey_date = ?");
        $stmt->execute([$from, $to, $journey_date]);
        $buses = $stmt->fetchAll(PDO::FETCH_ASSOC);
        
        if (count($buses) > 0) {
            $result = "Found " . count($buses) . " buses.";
        } else {
            $result = "No buses found.";
        }
    } catch (PDOException $e) {
        $result = "Database error: " . $e->getMessage();
    }
}
?>
//search_results
<div class="container">
        <h1>Available Buses</h1>
        
        <?php if ($result->num_rows > 0): ?>
            <table>
                <tr>
                    <th>Bus Number</th>
                    <th>From</th>
                    <th>To</th>
                    <th>Date</th>
                    <th>Price</th>
                    <th>Book</th>
                </tr>
                <?php while ($row = $result->fetch_assoc()): ?>
                    <tr>
                        <td><?php echo $row['id']; ?></td>
                        <td><?php echo $row['terminal_name']; ?></td>
                        <td><?php echo $row['city']; ?></td>
                        <td><?php echo $row['date_updated']; ?></td>
                        <td><?php echo $row['price']; ?></td>
                        <td><a href="book_ticket.php?bus_id=<?php echo $row['id']; ?>">Book Now</a></td>
                    </tr>
                <?php endwhile; ?>
            </table>
        <?php else: ?>
            <p>No buses found for your selection.</p>
        <?php endif; ?>
